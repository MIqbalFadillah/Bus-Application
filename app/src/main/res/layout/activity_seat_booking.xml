<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"
        android:src="@drawable/steering"/>

    <TextView
        android:id="@+id/txtSS"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"
        android:src="@drawable/steering"/>

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/lst_items"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEAT BELAKANG"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_bc1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/seat_normal"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/img_bc2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/seat_normal"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/img_bc3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/seat_normal"
            android:layout_marginRight="12dp"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/img_bc4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/seat_normal"
            android:layout_marginRight="12dp"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/img_bc5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/seat_normal"
            android:layout_marginRight="12dp"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/img_bc6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/seat_normal"
            android:layout_centerHorizontal="true"/>


    </LinearLayout>

</LinearLayout>